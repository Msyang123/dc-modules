<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.dc.mapper.ProductShelfMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="baseResultMap" type="com.lhiot.dc.entity.ProductShelf">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="specification_id" property="specificationId"/>
        <result column="shelf_qty" property="shelfQty"/>
        <result column="price" property="price"/>
        <result column="description" property="description"/>
        <result column="shelf_status" property="shelfStatus"/>
        <result column="application_type" property="applicationType"/>
        <result column="sorting" property="sorting"/>
        <result column="image" property="image"/>
        <result column="create_at" property="createAt"/>
        <result column="original_price" property="originalPrice"/>
        <result column="product_image" property="productImage"/>
        <result column="shelf_type" property="shelfType"/>
    </resultMap>

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="associationResultMap" type="com.lhiot.dc.entity.ProductShelf">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="specification_id" property="specificationId"/>
        <result column="shelf_qty" property="shelfQty"/>
        <result column="price" property="price"/>
        <result column="description" property="description"/>
        <result column="shelf_status" property="shelfStatus"/>
        <result column="application_type" property="applicationType"/>
        <result column="sorting" property="sorting"/>
        <result column="image" property="image"/>
        <result column="create_at" property="createAt"/>
        <result column="original_price" property="originalPrice"/>
        <result column="product_image" property="productImage"/>
        <result column="shelf_type" property="shelfType"/>
        <association property="productSpecification" javaType="com.lhiot.dc.entity.ProductSpecification"
                     column="specification_id" select="com.lhiot.dc.mapper.ProductSpecificationMapper.findById">
            <id column="id" property="id"/>
            <result column="product_id" property="productId"/>
            <result column="barcode" property="barcode"/>
            <result column="packaging_unit" property="packagingUnit"/>
            <result column="weight" property="weight"/>
            <result column="limit_inventory" property="limitInventory"/>
            <result column="inventory_specification" property="inventorySpecification"/>
            <result column="available_status" property="availableStatus"/>
            <result column="create_at" property="createAt"/>
            <result column="specification_qty" property="specificationQty"/>
            <association property="product" javaType="com.lhiot.dc.entity.Product">
                <id column="pd_id" property="id"/>
                <result column="pd_product_code" property="code"/>
                <result column="pd_product_name" property="name"/>
                <result column="pd_category_id" property="categoryId"/>
                <result column="pd_source_code" property="sourceCode"/>
                <result column="pd_benefit" property="benefit"/>
                <result column="pd_description" property="description"/>
                <result column="pd_create_at" property="createAt"/>
                <collection property="attachments" ofType="com.lhiot.dc.entity.ProductAttachment">
                    <id column="pda_id" property="id"/>
                    <result column="pda_url" property="url"/>
                    <result column="pda_product_id" property="productId"/>
                    <result column="pda_sorting" property="sorting"/>
                    <result column="pda_attachment_type" property="attachmentType"/>
                </collection>
            </association>
        </association>
    </resultMap>


    <!-- base查询字段  -->
    <sql id="columns">
        <trim suffixOverrides=",">
            ps.id,
            ps.`name`,
            ps.specification_id,
            ps.shelf_qty,
            ps.price,
            ps.description,
            ps.shelf_status,
            ps.application_type,
            ps.sorting,
            ps.image,
            ps.create_at,
            ps.original_price,
            ps.product_image,
            ps.shelf_type,
        </trim>
    </sql>


    <!--新增商品上架-->
    <insert id="insert" parameterType="com.lhiot.dc.entity.ProductShelf" useGeneratedKeys="true" keyColumn="id"
            keyProperty="id">
        insert into product_shelf
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null ">
                `name`,
            </if>
            <if test="specificationId != null ">
                specification_id,
            </if>
            <if test="shelfQty != null ">
                shelf_qty,
            </if>
            <if test="price != null ">
                price,
            </if>
            <if test="description != null ">
                description,
            </if>
            <if test="shelfStatus != null ">
                shelf_status,
            </if>
            <if test="applicationType != null ">
                application_type,
            </if>
            <if test="sorting != null ">
                sorting,
            </if>
            <if test="image != null ">
                image,
            </if>
            <if test="createAt != null ">
                create_at,
            </if>
            <if test="originalPrice != null ">
                original_price,
            </if>
            <if test="productImage != null ">
                product_image,
            </if>
            <if test="shelfType != null ">
                shelf_type,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null ">
                #{name},
            </if>
            <if test="specificationId != null ">
                #{specificationId},
            </if>
            <if test="shelfQty != null ">
                #{shelfQty},
            </if>
            <if test="price != null ">
                #{price},
            </if>
            <if test="description != null ">
                #{description},
            </if>
            <if test="shelfStatus != null ">
                #{shelfStatus},
            </if>
            <if test="applicationType != null ">
                #{applicationType},
            </if>
            <if test="sorting != null ">
                #{sorting},
            </if>
            <if test="image != null ">
                #{image},
            </if>
            <if test="createAt != null ">
                #{createAt},
            </if>
            <if test="originalPrice != null ">
                #{originalPrice},
            </if>
            <if test="productImage != null ">
                #{productImage},
            </if>
            <if test="shelfType != null ">
                #{shelfType},
            </if>
        </trim>
    </insert>

    <!--修改商品上架-->
    <update id="updateById" parameterType="com.lhiot.dc.entity.ProductShelf">
        update product_shelf
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">`name` = #{name},</if>
            <if test="specificationId != null">specification_id = #{specificationId},</if>
            <if test="shelfQty != null">shelf_qty = #{shelfQty},</if>
            <if test="price != null">price = #{price},</if>
            <if test="originalPrice != null">original_price = #{originalPrice},</if>
            <if test="image != null and image != ''">image = #{image},</if>
            <if test="productImage != null and productImage != ''">product_image = #{productImage},</if>
            <if test="shelfStatus != null ">shelf_status = #{shelfStatus},</if>
            <if test="shelfType != null ">shelf_type = #{shelfType},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="sorting != null and sorting != ''">sorting = #{sorting},</if>
            <if test="applicationType != null">application_type = #{applicationType},</if>
        </trim>
        where id = #{id}
    </update>


    <!-- 查找单个商品上架 -->
    <select id="findById" parameterType="Long" resultMap="baseResultMap">
        select
        <include refid="columns"/>
        from product_shelf ps
        where ps.id = #{0}
    </select>

    <!-- 查找单个商品上架（包含商品信息） -->
    <select id="findByIdIncludeProduct" parameterType="Long" resultMap="associationResultMap">
        select
        <include refid="columns"/>
        from product_shelf ps
        where ps.id = #{0}
    </select>



    <!-- 删除商品上架集合 -->
    <delete id="deleteByIds" parameterType="String">
        delete from product_shelf where id in
        <foreach item="item" index="index" collection="ids.split(',')" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>


    <!--根据商品规格Id集合查询商品上架集合-->
    <select id="findListBySpecificationIds" resultMap="baseResultMap" parameterType="String">
        select
        <include refid="columns"/>
        from product_shelf ps
        where ps.specification_id in
        <foreach item="item" index="index" collection="specificationIds.split(',')" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>


    <!--根据商品版块Id查询商品上架集合 -->
    <select id="findListBySectionId" resultMap="baseResultMap" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        from product_shelf ps
        left join product_section_relation psr on ps.id=psr.shelf_id
        where psr.section_id = #{sectionId}
        order by ps.sorting asc , ps.id desc
        <if test="includeShelvesQty != null and includeShelvesQty >= 0 ">
            limit 0 , #{includeShelvesQty}
        </if>
    </select>

    <!--根据商品版块Id查询商品上架集合 （包含商品信息） -->
    <select id="findListIncludeProductBySectionId" resultMap="associationResultMap" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        from product_shelf ps
        left join product_section_relation psr on ps.id=psr.shelf_id
        where psr.section_id = #{sectionId}
        order by ps.sorting asc , ps.id desc
        <if test="includeShelvesQty != null and includeShelvesQty >= 0 ">
            limit 0 , #{includeShelvesQty}
        </if>
    </select>



    <!-- filter查询条件  -->
    <sql id="filter">
        <trim prefix="where" prefixOverrides="and|or">
            <if test="sectionId != null">and ps.id in (select psr.shelf_id from product_section_relation psr
                where psr.section_id = #{sectionId})
            </if>
            <if test="ids != null and ids != ''">
                and ps.id in
                <foreach item="item" index="index" collection="ids.split(',')" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="name != null and name != ''">and ps.`name` like concat('%',#{name},'%')</if>
            <if test="shelfStatus != null">and ps.shelf_status = #{shelfStatus}</if>
            <if test="shelfType != null">and ps.shelf_type = #{shelfType}</if>
            <if test="applicationType != null">and ps.application_type = #{applicationType}</if>
            <if test="minPrice != null">and ps.price <![CDATA[ >= ]]> #{minPrice}</if>
            <if test="maxPrice != null">and ps.price <![CDATA[ <= ]]> #{maxPrice}</if>
            <if test="minOriginalPrice != null">and ps.original_price <![CDATA[ >= ]]> #{minOriginalPrice}</if>
            <if test="maxOriginalPrice != null">and ps.original_price <![CDATA[ <= ]]> #{maxOriginalPrice}</if>
            <if test="beginCreateAt != null">and ps.create_at <![CDATA[ >= ]]> #{beginCreateAt}</if>
            <if test="endCreateAt != null">and ps.create_at <![CDATA[ <= ]]> #{endCreateAt}</if>
            <if test="keyword != null and keyword != ''">
                and ps.`name` like concat('%',#{keyword},'%')
                or psf.barcode like concat('%',#{keyword},'%')
            </if>
        </trim>
    </sql>


    <!--查询商品上架集合-->
    <select id="findList" resultMap="baseResultMap" parameterType="com.lhiot.dc.model.ProductShelfParam">
        select
        <include refid="columns"/>
        from product_shelf ps
        left join product_specification psf on ps.specification_id = psf.id
        <include refid="filter"/>
        <if test="rows != null and rows > 0 ">
            order by ps.sorting asc , ps.id desc
            limit #{startRow} , #{rows}
        </if>
    </select>

    <!--查询商品上架集合(包含商品信息)-->
    <select id="findListIncludeProduct" resultMap="associationResultMap" parameterType="com.lhiot.dc.model.ProductShelfParam">
        select
        <include refid="columns"/>
        from product_shelf ps
        left join product_specification psf on ps.specification_id = psf.id
        <include refid="filter"/>
        <if test="rows != null and rows > 0 ">
            order by ps.sorting asc , ps.id desc
            limit #{startRow} , #{rows}
        </if>
    </select>

    <!--查询商品上架集合总数-->
    <select id="findCount" parameterType="com.lhiot.dc.model.ProductShelfParam" resultType="int">
        select count(1)
        from product_shelf ps
        left join product_specification psf on ps.specification_id = psf.id
        <include refid="filter"/>
    </select>

</mapper>