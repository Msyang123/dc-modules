<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.dc.mapper.PaymentConfigMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="baseResultMap"
               type="com.lhiot.dc.domain.PaymentConfig">
        <id column="id" property="id"/>
        <result column="alias" property="alias"/>
        <result column="partner_id" property="partnerId"/>
        <result column="partner_key" property="partnerKey"/>
        <result column="private_key" property="privateKey"/>
        <result column="pkcs12_url" property="pkcs12Url"/>
        <result column="ali_seller_id" property="aliSellerId"/>
        <result column="pay_platform_type" property="payPlatformType"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- base查询字段  -->
    <sql id="columns">
        <trim suffixOverrides=",">
            id,
            alias,
            partner_id,
            partner_key,
            private_key,
            pkcs12_url,
            ali_seller_id,
            pay_platform_type,
            remark,
        </trim>
    </sql>

    <!--新增支付签名信息-->
    <insert id="create" parameterType="com.lhiot.dc.domain.PaymentConfig" useGeneratedKeys="true" keyProperty="id">
        insert into payment_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="alias != null ">
                alias,
            </if>
            <if test="partnerId != null ">
                partner_id,
            </if>
            <if test="partnerKey != null ">
                partner_key,
            </if>
            <if test="privateKey != null ">
                private_key,
            </if>
            <if test="pkcs12Url != null ">
                pkcs12_url,
            </if>
            <if test="aliSellerId != null ">
                ali_seller_id,
            </if>
            <if test="payPlatformType != null ">
                pay_platform_type,
            </if>
            <if test="remark != null ">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="alias != null ">
                #{alias},
            </if>
            <if test="partnerId != null ">
                #{partnerId},
            </if>
            <if test="partnerKey != null ">
                #{partnerKey},
            </if>
            <if test="privateKey != null ">
                #{privateKey},
            </if>
            <if test="pkcs12Url != null ">
                #{pkcs12Url},
            </if>
            <if test="aliSellerId != null ">
                #{aliSellerId},
            </if>
            <if test="payPlatformType != null ">
                #{payPlatformType},
            </if>
            <if test="remark != null ">
                #{remark},
            </if>
        </trim>
    </insert>

    <!--根据id修改支付签名信息-->
    <update id="update" parameterType="com.lhiot.dc.domain.PaymentConfig">
        update payment_config
        <set>
            <if test="alias != null ">
                alias = #{alias},
            </if>
            <if test="partnerId != null ">
                partner_id = #{partnerId},
            </if>
            <if test="partnerKey != null ">
                partner_key = #{partnerKey},
            </if>
            <if test="privateKey != null ">
                private_key = #{privateKey},
            </if>
            <if test="pkcs12Url != null ">
                pkcs12_url = #{pkcs12Url},
            </if>
            <if test="aliSellerId != null ">
                ali_seller_id = #{aliSellerId},
            </if>
            <if test="payPlatformType != null ">
                pay_platform_type = #{payPlatformType},
            </if>
            <if test="remark != null ">
                remark = #{remark},
            </if>
        </set>
        where id=#{id}
    </update>

    <!-- 根据id查找支付签名信息 -->
    <select id="selectById" resultMap="baseResultMap" parameterType="long">
        select
        <include refid="columns"/>
        from payment_config where id = #{id}
    </select>

    <select id="selectByName" resultMap="baseResultMap" parameterType="String">
        select
        <include refid="columns"/>
        from payment_config where alias = #{alias}
    </select>


    <select id="selectAll" resultMap="baseResultMap">
        select
        <include refid="columns"/>
        from payment_config
    </select>
</mapper>