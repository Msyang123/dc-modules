<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.dc.mapper.ProductSpecificationMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="baseResultMap" type="com.lhiot.dc.domain.ProductSpecification">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="barcode" property="barcode"/>
        <result column="packaging_unit" property="packagingUnit"/>
        <result column="weight" property="weight"/>
        <result column="limit_inventory" property="limitInventory"/>
        <result column="inventory_specification" property="inventorySpecification"/>
        <result column="available_status" property="availableStatus"/>
        <result column="create_at" property="createAt"/>
        <result column="specification_qty" property="specificationQty"/>
    </resultMap>


    <!-- base查询字段  -->
    <sql id="columns">
        <trim suffixOverrides=",">
            id,
            product_id,
            barcode,
            packaging_unit,
            weight,
            limit_inventory,
            inventory_specification,
            available_status,
            create_at,
            specification_qty,
        </trim>
    </sql>


    <!--新增商品规格-->
    <insert id="insert" parameterType="com.lhiot.dc.domain.ProductSpecification" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into product_specification
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productId != null ">
                product_id,
            </if>
            <if test="barcode != null ">
                barcode,
            </if>
            <if test="packagingUnit != null ">
                packaging_unit,
            </if>
            <if test="weight != null ">
                weight,
            </if>
            <if test="limitInventory != null ">
                limit_inventory,
            </if>
            <if test="inventorySpecification != null ">
                inventory_specification,
            </if>
            <if test="availableStatus != null ">
                available_status,
            </if>
            <if test="createAt != null ">
                create_at,
            </if>
            <if test="specificationQty != null ">
                specification_qty,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productId != null ">
                #{productId},
            </if>
            <if test="barcode != null ">
                #{barcode},
            </if>
            <if test="packagingUnit != null ">
                #{packagingUnit},
            </if>
            <if test="weight != null ">
                #{weight},
            </if>
            <if test="limitInventory != null ">
                #{limitInventory},
            </if>
            <if test="inventorySpecification != null ">
                #{inventorySpecification},
            </if>
            <if test="availableStatus != null ">
                #{availableStatus},
            </if>
            <if test="createAt != null ">
                #{createAt},
            </if>
            <if test="specificationQty != null ">
                #{specificationQty},
            </if>
        </trim>
    </insert>

    <!--修改商品规格-->
    <update id="updateById" parameterType="com.lhiot.dc.domain.ProductSpecification">
        update product_specification
        <trim prefix="set" suffixOverrides=",">
            <if test="productId != null and productId != ''">product_id = #{productId},</if>
            <if test="barcode != null and barcode != ''">barcode = #{barcode},</if>
            <if test="packagingUnit != null and packagingUnit != ''">packaging_unit = #{packagingUnit},</if>
            <if test="weight != null and weight != ''">weight = #{weight},</if>
            <if test="limitInventory != null and limitInventory != ''">limit_inventory = #{limitInventory},</if>
            <if test="inventorySpecification != null">inventory_specification = #{inventorySpecification},</if>
            <if test="availableStatus != null">available_status = #{availableStatus},</if>
            <if test="specificationQty != null and specificationQty != ''">specification_qty = #{specificationQty},</if>
        </trim>
        where id = #{id}
    </update>


    <!-- 查找单个商品规格 -->
    <select id="findById" parameterType="Long" resultMap="baseResultMap">
		select
        <include refid="columns"/>
		 from  product_specification
		 where id=#{0}
	</select>


    <!-- 删除单个商品规格 -->
    <delete id="deleteById" parameterType="Long">
        delete from product_specification where id = #{0}
    </delete>


    <!-- 根据商品Id删除所属商品规格集合 -->
    <delete id="deleteByProductId" parameterType="Long">
        delete from product_specification where product_id = #{0}
    </delete>


    <!--根据商品Id查询商品规格集合-->
    <select id="findListByProductId" resultMap="baseResultMap" parameterType="Long">
        select
        <include refid="columns"/>
        from product_specification
        where product_id = #{0}
    </select>

    <!--根据商品Id集合 查找出有商品规格的商品-->
    <select id="findSpecificationProductIdList" parameterType="list" resultType="map">
        select ps.product_id productId,p.product_name productName
        from product_specification ps
        left join product p on ps.product_id=p.id
        where ps.product_id in
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
        group by ps.product_id,p.product_name
        having count(ps.id)>0
    </select>


</mapper>