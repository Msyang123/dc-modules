<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.dc.base.mapper.StorePositionMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="BaseResultMap"
        type="com.lhiot.dc.base.model.StorePosition" >
        <id column="id" property="id"/>
        <result column="lng" property="lng" />
        <result column="lat" property="lat" />
        <result column="application_type" property="applicationType" />
        <result column="store_id" property="storeId" />
    </resultMap>

    <!-- base查询字段  -->
    <sql id="Base_Column_List" >
        <trim suffixOverrides="," >
            id,
            lng,
            lat,
            application_type,
            store_id,
        </trim>
    </sql>

    <!--新增门店位置-->
    <insert id="create" parameterType="com.lhiot.dc.base.model.StorePosition" useGeneratedKeys="true" keyProperty="id">
        insert into store_position
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                id,
            </if>
            <if test="lng != null ">
                lng,
            </if>
            <if test="lat != null ">
                lat,
            </if>
            <if test="applicationType != null ">
                application_type,
            </if>
            <if test="storeId != null ">
                store_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                #{id},
            </if>
            <if test="lng != null ">
                #{lng},
            </if>
            <if test="lat != null ">
                #{lat},
            </if>
            <if test="applicationType != null ">
                #{applicationType},
            </if>
            <if test="storeId != null ">
                #{storeId},
            </if>
        </trim>
    </insert>

    <!--根据id修改门店位置-->
    <update id="updateById" parameterType="com.lhiot.dc.base.model.StorePosition">
        update store_position
        <set>
            <if test="id != null ">
                id = #{id},
            </if>
            <if test="lng != null ">
                lng = #{lng},
            </if>
            <if test="lat != null ">
                lat = #{lat},
            </if>
            <if test="applicationType != null ">
                application_type = #{applicationType},
            </if>
            <if test="storeId != null ">
                store_id = #{storeId},
            </if>
        </set>
        where id=#{id}
    </update>

    <!--根据ids删除门店位置-->
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from store_position where id in
        <foreach collection="list" item="item" open="("
            separator="," close=")">
            #{item}
        </foreach>
    </delete>


    <!-- 根据id查找门店位置 -->
	<select id="selectById" resultMap="BaseResultMap"
		parameterType="long"> select <include refid="Base_Column_List" />
		from store_position where id = #{id}
	</select>

    <!-- 根据门店编码查询位置-->
    <select id="selectByStoreIds" resultMap="BaseResultMap"
            parameterType="com.lhiot.dc.base.model.StorePosition">
        select <include refid="Base_Column_List" />
        from store_position
        where application_type = #{applicationType} and store_id in
        <foreach collection="storeIds" item="item" open="("
                 separator="," close=")">
            #{item}
        </foreach>
    </select>

    <!-- 根据门店编码查询位置-->
    <select id="selectByStoreId" resultMap="BaseResultMap"
            parameterType="com.lhiot.dc.base.model.StorePosition">
        select <include refid="Base_Column_List" />
        from store_position
        where application_type = #{applicationType} and store_id = #{storeId}
    </select>


    <!-- base where条件  -->
    <sql id="Base_Where_Condition" >
        <where>
            <if test="id != null ">
                and id = #{id}
            </if>
            <if test="lng != null ">
                and lng = #{lng}
            </if>
            <if test="lat != null ">
                and lat = #{lat}
            </if>
            <if test="applicationType != null ">
                and application_type = #{applicationType}
            </if>
            <if test="storeId != null ">
                and store_id = #{storeId}
            </if>
        </where>
    </sql>


    <!--查询门店位置列表-->
     <select id="pageStorePositions" resultMap="BaseResultMap"
        parameterType="com.lhiot.dc.base.model.StorePosition">
	        select <include refid="Base_Column_List" />
	        from store_position
	        <include refid="Base_Where_Condition" />
	        <include refid="common.pager" />
    </select>

    <!--查询门店位置总记录-->
    <select id="pageStorePositionCounts" resultType="long"
        parameterType="com.lhiot.dc.base.model.StorePosition">
            select count(1)
            from store_position
            <include refid="Base_Where_Condition" />
    </select>

    <select id="findByStoreIdAndApplicationType" resultMap="BaseResultMap"
            parameterType="map">
        select <include refid="Base_Column_List" />
        from store_position
        where application_type = #{applicationType}
        and store_id = #{storeId}
    </select>

</mapper>